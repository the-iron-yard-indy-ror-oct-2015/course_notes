<div class="container">
  <h1>Indy Rubyists!</h1>
  <% @users.each do |user| %>
    <div class="row">
      <div class="col-xs-1">
        <%= image_tag user[:avatar_url], :class => "img-responsive" %>
      </div>
      <div class="col-xs-11">
        <h4><%= link_to user[:name], user[:html_url] %></h4>
        <p>Member since: <%= user[:created_at].to_date.to_s(:long) %> :: <%= pluralize(user[:public_repos], "repo") %> :: <%= pluralize(user[:followers], "follower") %> :: <%= link_to "Recent Events", show_path(user[:login]) %></p>
      </div>
    </div>
  <% end %>
  <%= paginate @all_users %>
</div>
