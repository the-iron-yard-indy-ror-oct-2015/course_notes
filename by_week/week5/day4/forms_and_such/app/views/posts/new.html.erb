<% if params[:action] == "new" || params[:action] == "create" %>
  <h1>New post</h1>
<% else %>
  <h1>Edit post</h1>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, :class => "form-control", :rows => 12 %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", :class => "btn btn-primary btn-large" %>
  </div>
<% end %>
