<!DOCTYPE html>
<html>
<head>
  <title>FormsAndSuch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-9">
        <%= yield %>
      </div>
      <div class="col-xs-3">
        <%= button_to "New Post", new_post_path, :method => "get", :class => "btn btn-danger" %>
        <%= link_to "SUCCESS!", "#", :class => "btn btn-success" %>
      </div>
    </div>
  </div>
</body>
</html>
