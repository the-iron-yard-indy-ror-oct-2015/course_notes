<!DOCTYPE html>
<html>
<head>
  <title>Kiddekare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <% if current_user %>
        <%= button_to "Log out", user_session_path(current_user.id), class: "btn btn-large", method: :delete %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "btn btn-large btn-primary" %>
        <%= link_to "Sign up", new_user_path(:role => "daycare_administrator"), class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </nav>
  <%= yield %>
</div>

</body>
</html>
