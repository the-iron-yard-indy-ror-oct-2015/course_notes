<!DOCTYPE html>
<html>
<head>
  <title>Kiddekare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% if current_user %>
    <%= button_to "Log out", user_session_path(current_user.id), class: "btn btn-large", method: :delete %>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
